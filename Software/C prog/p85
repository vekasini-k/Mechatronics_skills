#include <stdio.h>
int main(){
    int n,sum=1;
    printf("enter no:");
    scanf("%d",&n);

    for (int i=1;i<=n;i++){
        for (int j=1;j<=i;j++){
            printf(" %d",sum);
           sum++;

        }
        printf("\n");
    }
    if(n<=0){
        printf("invalid");
    }


    return 0;
} 
    

