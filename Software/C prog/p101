#include<stdio.h>
#include<math.h>
int main()
{
    int a=1,n,x,p,f=1,temp,b=1;
    double sum=0;
    scanf("%d",&x);
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
       p=pow(x,i);
       f=1;
       for(int j=2;j<=i;j++)
       {
        f=f*j;
       }
       a=1;
       for(int k=1;k<i;k++)
       {
         a=a*-1;
       }
       if(i==1)
       {
        sum=1;
        continue;
       }
       sum=sum+(a*p/f);
    }
    printf("\nSum=%0.2f",sum);
    
}
