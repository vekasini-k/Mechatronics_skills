#include <stdio.h>
int main(){
    int temp;
    printf("enter temperature in centigrade");
    scanf("%d",&temp);
    if (temp >=45){
        printf("very hot day");
    }
    else if(temp>=30 && temp<45 ){
        printf("hot day");
    }
    else if(temp >=20 && temp<30){
        printf("normal temp");
    }
    else if(temp >=10 && temp<20){
        printf("cold day");
    }
    else if(temp >=0 && temp<10){
        printf("very cold day");
    }
    else if(temp <0){
        printf("freezing temp");
    }

    return 0;
}
