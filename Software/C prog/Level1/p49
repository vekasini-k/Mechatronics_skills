#include<stdio.h>
#include<math.h>
int main()
{ 
  double p,r,t,tot,temp;
  unsigned v=pow(2,31);
  printf("Principal intrest :");
  scanf("%lf",&p);
  printf("\nRate :");
  scanf("%lf",&r);
  printf("\nTime :");
  scanf("%lf",&t);
  if(1<=p && p<v && 1.0<=r<=8.5 && t>0 )
  {
    tot=p*pow((1+r/100),t);
    printf("\n%0.2f",tot);
  }
  else
  {
    if(1>p||p>=v)
    {
      printf("Principal amount must be between 1 and 2^31 - 1");
    }
    else if(1.0>r||r>8.5)
    {
      printf("Error: Interest rate must be between 1.0 and 8.5");
    }
    else if(t<=0)
    {
      printf("Enter valid time");
    }
  }
  return 0;
}
