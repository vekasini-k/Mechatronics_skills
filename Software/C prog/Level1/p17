#include <stdio.h>
int main(){
    int bs,gs,hra,da;
    printf("enter the salary");
    scanf("%d",&bs);
    if (bs<=10000){
        hra=0.2*bs;
        da=0.8*bs;
    }
    else if (bs>10000 && bs<=20000){
        hra=0.25*bs;
        da=0.9*bs;
    }
    else if (bs>=20000){
        hra=0.3*bs;
        da=0.95*bs;
    }
    gs=bs+hra+da;
    printf("gross salary %d",gs);


    return 0;
}
