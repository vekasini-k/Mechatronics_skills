#include <stdio.h>
int main(){
    int base,bonus,allowance,E,stot,s;
    float per;
    printf("enter base salary:");
    scanf("%d",&base);
    printf("\nenter bonus salary:");
    scanf("%d",&bonus);
    printf("\nenter allowance salary:");
    scanf("%d",&allowance);
    printf("\nenter expenditure:");
    scanf("%d",&E);

    stot=base+bonus+allowance;
    s=stot-E;

    printf("\nstotal: %d",stot);
    printf("\nS: %d",s);

    if (stot!=0){
        per=(s*100)/stot;
        printf("\npercentage: %0.2f",per);
    }
    else{
        printf("\nundefined");
    }
    
    return 0;
}
