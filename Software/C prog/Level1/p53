#include <stdio.h>
#include <string.h>
int main(){
    char name[50];
    int roll,class,num;
    float p;
    printf("enter your name:");
    scanf("%[^\n]",name);
       
    if (strlen(name)==0){
        printf("error");
        return 1;
    }
    printf("enter roll_no:");
    scanf("%d",&roll);
    if (roll<=0){
        printf("error");
        return 1;
    }
    printf("enter total class:");
    scanf("%d",&class);
    if (class<=0){
        printf("error");
        return 1;
    }
    printf("enter no of attended class:");
    scanf("%d",&num);
    if (num<=0 || num>class){
        printf("error");
        return 1;
    }
     
    p=num*100/class;
    printf("attendance percentage: %0.2f",p);
    
    return 1;
}
